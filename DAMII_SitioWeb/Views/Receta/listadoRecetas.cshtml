@model IEnumerable<DAMII_SitioWeb.Models.Receta>

@{
    ViewBag.Title = "listadoRecetas";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LISTADO DE RECETAS</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipocomida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tiempoprepa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ingredienes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preparacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipocomida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.video)
            </td>
            <td>
                <img class="foto" src="@Url.Content(item.foto)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tiempoprepa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredienes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preparacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
            
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
